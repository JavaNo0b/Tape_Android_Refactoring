<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/setting_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설정"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/pretendard"
        android:layout_marginTop="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/setting_account_icon_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/menu_account"
        android:scaleType="fitXY"
        android:layout_marginTop="17dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/setting_title_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/setting_account_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="계정 관리"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/pretendard"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/setting_account_icon_iv"
        app:layout_constraintBottom_toBottomOf="@id/setting_account_icon_iv"
        app:layout_constraintStart_toEndOf="@id/setting_account_icon_iv"/>

    <ImageView
        android:id="@+id/setting_customer_center_icon_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/menu_customer_center"
        android:scaleType="fitXY"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/setting_account_icon_iv"
        app:layout_constraintStart_toStartOf="@id/setting_account_icon_iv"/>

    <TextView
        android:id="@+id/setting_customer_center_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="고객센터"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/pretendard"
        app:layout_constraintTop_toTopOf="@id/setting_customer_center_icon_iv"
        app:layout_constraintBottom_toBottomOf="@id/setting_customer_center_icon_iv"
        app:layout_constraintStart_toStartOf="@id/setting_account_tv"/>

    <ImageView
        android:id="@+id/setting_terms_icon_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/menu_terms"
        android:scaleType="fitXY"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/setting_customer_center_icon_iv"
        app:layout_constraintStart_toStartOf="@id/setting_account_icon_iv"/>

    <TextView
        android:id="@+id/setting_terms_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이용약관"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/pretendard"
        app:layout_constraintTop_toTopOf="@id/setting_terms_icon_iv"
        app:layout_constraintBottom_toBottomOf="@id/setting_terms_icon_iv"
        app:layout_constraintStart_toStartOf="@id/setting_account_tv"/>

    <ImageView
        android:id="@+id/setting_privacy_icon_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/menu_personal_info"
        android:scaleType="fitXY"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/setting_terms_icon_iv"
        app:layout_constraintStart_toStartOf="@id/setting_account_icon_iv"/>

    <TextView
        android:id="@+id/setting_privacy_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개인 정보 처리 방침"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/pretendard"
        app:layout_constraintTop_toTopOf="@id/setting_privacy_icon_iv"
        app:layout_constraintBottom_toBottomOf="@id/setting_privacy_icon_iv"
        app:layout_constraintStart_toStartOf="@id/setting_account_tv"/>

    <ImageView
        android:id="@+id/setting_bar_iv"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:src="@drawable/follow_clicked_btn"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/setting_privacy_icon_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/setting_app_version_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="앱 버전"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/pretendard"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/setting_bar_iv"
        app:layout_constraintStart_toStartOf="@id/setting_account_icon_iv"/>

    <TextView
        android:id="@+id/setting_app_version_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0.1"
        android:textSize="15sp"
        android:textColor="#848484"
        android:textStyle="bold"
        android:fontFamily="@font/pretendard"
        android:layout_marginEnd="17dp"
        app:layout_constraintTop_toTopOf="@id/setting_app_version_text_tv"
        app:layout_constraintBottom_toBottomOf="@id/setting_app_version_text_tv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/setting_logout_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/pretendard"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/setting_app_version_text_tv"
        app:layout_constraintStart_toStartOf="@id/setting_account_icon_iv"/>

    <TextView
        android:id="@+id/setting_exit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원 탈퇴"
        android:textSize="15sp"
        android:textColor="#FF5E5E"
        android:textStyle="bold"
        android:fontFamily="@font/pretendard"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/setting_logout_tv"
        app:layout_constraintStart_toStartOf="@id/setting_account_icon_iv"/>


</androidx.constraintlayout.widget.ConstraintLayout>