    <Button
        android:id="@+id/profile_profile_edit_btn"
        android:layout_width="169dp"
        android:layout_height="33dp"
        android:text="프로필 수정"
        android:textColor="#4A4A4A"
        android:background="@drawable/follow_clicked_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginTop="17dp"
        app:layout_constraintStart_toStartOf="@id/profile_profile_iv"
        app:layout_constraintEnd_toStartOf="@id/profile_profile_share_btn"
        app:layout_constraintTop_toBottomOf="@id/profile_follower_ll"/>

    <Button
        android:id="@+id/profile_profile_share_btn"
        android:layout_width="169dp"
        android:layout_height="33dp"
        android:text="프로필 공유"
        android:textColor="#4A4A4A"
        android:background="@drawable/follow_clicked_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginStart="9dp"
        app:layout_constraintStart_toEndOf="@id/profile_profile_edit_btn"
        app:layout_constraintEnd_toEndOf="@id/profile_profile_iv"
        app:layout_constraintTop_toTopOf="@id/profile_profile_edit_btn"
        app:layout_constraintBottom_toBottomOf="@id/profile_profile_edit_btn"/>



    <com.google.android.material.tabs.TabLayout
        android:id="@+id/profile_content_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:tabSelectedTextColor="@color/black"
        app:tabIndicatorColor="@color/black"
        app:tabIndicatorFullWidth="false"
        app:tabRippleColor="#00ff0000"
        app:layout_constraintStart_toStartOf="@id/profile_profile_iv"
        app:layout_constraintEnd_toEndOf="@id/profile_profile_iv"
        app:layout_constraintTop_toBottomOf="@id/profile_profile_edit_btn"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/profile_content_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/profile_content_tb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/profile_post_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="게시"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/pretendard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

