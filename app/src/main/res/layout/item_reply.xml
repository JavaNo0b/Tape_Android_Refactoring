<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="105dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/user_profile_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:clipToOutline="true"
        android:background="@drawable/prof2_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        android:src="@drawable/album_4"
        />

    <TextView
        android:id="@+id/user_profile_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/user_profile_iv"
        app:layout_constraintStart_toEndOf="@id/user_profile_iv"
        android:layout_marginStart="6dp"
        android:text="Min_SEO!"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:paddingStart="6dp"/>
    <ImageView
        android:id="@+id/mark_writer_iv"
        android:layout_width="38dp"
        android:layout_height="17dp"
        android:src="@drawable/border_red"
        app:layout_constraintStart_toEndOf="@id/user_profile_tv"
        app:layout_constraintTop_toTopOf="@id/user_profile_tv"
        android:layout_marginStart="4dp"/>
    <TextView
        android:id="@+id/mark_writer_tv"
        android:layout_width="38dp"
        android:layout_height="17dp"
        android:textColor="#FF5E5E"
        android:text="작성자"
        android:textSize="9sp"
        app:layout_constraintTop_toTopOf="@id/mark_writer_iv"
        app:layout_constraintStart_toStartOf="@id/mark_writer_iv"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="1dp"/>


    <ImageView
        android:id="@+id/reply_edit_btn"
        android:layout_marginTop="2dp"
        android:src="@drawable/tape_song_more"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/reply_background_iv"
        app:layout_constraintTop_toTopOf="@id/user_profile_tv" />




    <ImageView
        android:id="@+id/reply_background_iv"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:src="@drawable/tape_back_rounded"
        app:layout_constraintStart_toEndOf="@id/user_profile_iv"
        app:layout_constraintTop_toBottomOf="@id/user_profile_tv"
        android:layout_marginTop="6dp"
        android:layout_marginStart="6dp"/>

    <TextView
        android:id="@+id/reply_text_tv"
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/reply_background_iv"
        app:layout_constraintTop_toTopOf="@id/reply_background_iv"
        android:layout_marginTop="2dp"
        android:layout_marginStart="2dp"
        android:paddingTop="6dp"
        android:paddingLeft="6dp"
        android:text="겨울에 듣기 좋은 노래.."
        android:textSize="11.5sp"
        android:textColor="@color/black"
        />

</androidx.constraintlayout.widget.ConstraintLayout>