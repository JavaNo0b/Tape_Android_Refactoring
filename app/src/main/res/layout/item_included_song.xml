<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/song_cover_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/album_4"
        android:layout_marginTop="26dp"
        android:layout_marginStart="16dp"
        android:clipToOutline="true"
        android:background="@drawable/layout_background_shape_4"
        />
    <TextView
        android:id="@+id/song_title_tv"
        android:layout_width="121dp"
        android:layout_height="18dp"
        android:text="우리 서로 사랑하지는 말자"
        android:textColor="@color/black"
        android:textSize="11.5sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/song_cover_img"
        app:layout_constraintTop_toTopOf="@id/song_cover_img"
        android:layout_marginStart="6dp"
        android:layout_marginTop="2dp"/>
    <TextView
        android:id="@+id/song_singer_tv"
        android:layout_width="71dp"
        android:layout_height="16dp"
        android:text="기리보이"
        android:textSize="9.5sp"
        android:textColor="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/song_title_tv"
        app:layout_constraintStart_toEndOf="@id/song_cover_img"
        android:layout_marginStart="6dp"/>
    <TextView
        android:id="@+id/song_album_title"
        android:layout_width="81dp"
        android:layout_height="16dp"
        android:text="기리보이 EP [영화같게]"
        android:textSize="7.5sp"

        app:layout_constraintTop_toBottomOf="@id/song_singer_tv"
        app:layout_constraintStart_toEndOf="@id/song_cover_img"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"/>
    <ImageView
        android:id="@+id/btn_delete_to_tape"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/delete_icon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="338dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>






</androidx.constraintlayout.widget.ConstraintLayout>