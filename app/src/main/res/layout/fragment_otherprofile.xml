    <Button
        android:id="@+id/otherprofile_follow_btn"
        android:layout_width="169dp"
        android:layout_height="33dp"
        android:text="팔로우"
        android:textColor="@color/white"
        android:background="@drawable/follow_unclicked_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginTop="17dp"
        app:layout_constraintStart_toStartOf="@id/otherprofile_profile_iv"
        app:layout_constraintEnd_toStartOf="@id/oherprofile_profile_share_btn"
        app:layout_constraintTop_toBottomOf="@id/otherprofile_follower_ll"/>

    <Button
        android:id="@+id/oherprofile_profile_share_btn"
        android:layout_width="169dp"
        android:layout_height="33dp"
        android:text="프로필 공유"
        android:textColor="#4A4A4A"
        android:background="@drawable/follow_clicked_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginStart="9dp"
        app:layout_constraintStart_toEndOf="@id/otherprofile_follow_btn"
        app:layout_constraintEnd_toEndOf="@id/otherprofile_profile_iv"
        app:layout_constraintTop_toTopOf="@id/otherprofile_follow_btn"
        app:layout_constraintBottom_toBottomOf="@id/otherprofile_follow_btn"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/otherprofile_content_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabSelectedTextColor="@color/black"
        app:tabIndicatorColor="@color/black"
        app:tabIndicatorFullWidth="false"
        app:tabRippleColor="#00ff0000"
        app:layout_constraintStart_toStartOf="@id/otherprofile_profile_iv"
        app:layout_constraintEnd_toEndOf="@id/otherprofile_profile_iv"
        app:layout_constraintTop_toBottomOf="@id/otherprofile_follow_btn"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/otherprofile_content_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/otherprofile_content_tb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>