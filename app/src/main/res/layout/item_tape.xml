<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="21dp"
    android:id="@+id/item_tape">


    <androidx.cardview.widget.CardView
        android:id="@+id/item_tape_albumcover_img_cardView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/item_tape_albumcover_img_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/albumcover_5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/item_tape_tapetitle_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Broken Melodies"
        style="@style/TextRegularBold"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/item_tape_albumcover_img_cardView"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/item_tape_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NCT DREAM"
        android:textSize="11.5sp"
        android:textColor="#BABABA"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/item_tape_albumcover_img_cardView"
        app:layout_constraintTop_toBottomOf="@+id/item_tape_tapetitle_tv"
        />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_tape_userimage_iv"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:src="@drawable/albumcover_5"
        android:layout_gravity="center"
        app:layout_constraintStart_toEndOf="@id/item_tape_albumcover_img_cardView"
        app:layout_constraintTop_toBottomOf="@id/item_tape_singer_tv"
        android:layout_marginTop="5.42dp"
        android:layout_marginStart="12dp"
        />

    <TextView
        android:id="@+id/item_tape_username_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="music_play"
        style="@style/TextSmallBold"
        android:textSize="10sp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="11.42dp"
        app:layout_constraintStart_toEndOf="@id/item_tape_albumcover_img_cardView"
        app:layout_constraintTop_toBottomOf="@+id/item_tape_singer_tv"
        />

    <View
        android:id="@+id/item_tape_gray_Rectangle"
        android:layout_width="270dp"
        android:layout_height="26dp"
        android:background="@drawable/layout_background_shape_3"
        app:layout_constraintTop_toBottomOf="@id/item_tape_userimage_iv"
        app:layout_constraintStart_toEndOf="@id/item_tape_albumcover_img_cardView"
        android:layout_marginTop="5.92dp"
        android:layout_marginStart="12dp"
        />

    <ImageView
        android:id="@+id/item_tape_tapemore_iv"
        android:src="@drawable/tape_song_more"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="5dp"
        android:elevation="5dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>