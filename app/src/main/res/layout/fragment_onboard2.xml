<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <TextView
        android:id="@+id/onboard2_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나의 음악 공간"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="149dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/onboard2_subtitle_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나만의 음악 취향을 나타내보세요!"
        android:textSize="13sp"
        android:textColor="#C4C4C4"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/onboard2_title_tv"
        app:layout_constraintStart_toStartOf="@id/onboard2_title_tv"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ob2_fire"
        android:layout_marginTop="58dp"
        android:layout_marginStart="110dp"
        app:layout_constraintTop_toBottomOf="@id/onboard2_subtitle_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ob2_heart"
        android:layout_marginTop="41.13dp"
        android:layout_marginEnd="80dp"
        app:layout_constraintTop_toBottomOf="@id/onboard2_subtitle_tv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ob2_heartpoint"
        android:layout_marginTop="57.81dp"
        android:layout_marginEnd="85dp"
        app:layout_constraintTop_toBottomOf="@id/onboard2_subtitle_tv"
        app:layout_constraintEnd_toEndOf="parent"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ob2_phoneimg"
        android:layout_marginTop="95dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/onboard2_subtitle_tv"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ob2_like"
        android:layout_marginTop="248dp"
        android:layout_marginStart="97dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/onboard2_subtitle_tv"/>

    <ImageView
        android:id="@+id/onboard2_first_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/onboard_2"
        android:scaleType="fitXY"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>