    <ImageView
        android:id="@+id/like_song_btn_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/like_song_unclicked_btn"
        android:layout_marginStart="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/like_song_album_cover_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/album_4"
        android:clipToOutline="true"
        android:background="@drawable/layout_background_shape_4"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/like_song_btn_iv"/>

    <TextView
        android:id="@+id/like_song_title_tv"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="우리 서로 사랑하지는 말자"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/pretendard"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/like_song_album_cover_iv"
        app:layout_constraintStart_toEndOf="@id/like_song_album_cover_iv"/>

    <TextView
        android:id="@+id/like_song_singer_tv"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="기리보이"
        android:textSize="13sp"
        android:textColor="#9F9F9F"
        android:textStyle="bold"
        android:fontFamily="@font/pretendard"
        app:layout_constraintTop_toBottomOf="@id/like_song_title_tv"
        app:layout_constraintStart_toStartOf="@id/like_song_title_tv"
        app:layout_constraintBottom_toTopOf="@id/like_song_album_name_tv"/>

    <TextView
        android:id="@+id/like_song_album_name_tv"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="영화같게 - EP"
        android:textSize="11sp"
        android:textColor="#9F9F9F"
        android:fontFamily="@font/pretendard"
        app:layout_constraintTop_toBottomOf="@id/like_song_singer_tv"
        app:layout_constraintStart_toStartOf="@id/like_song_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/like_song_album_cover_iv" />

    <ImageView
        android:id="@+id/like_song_play_btn_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/like_song_play_btn"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>