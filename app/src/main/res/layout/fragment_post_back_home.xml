<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/introduction_title"
        android:layout_width="280dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="147dp"
        android:text="테이프가 완성 되었어요!"
        android:textColor="@color/black"
        android:textSize="21sp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/introduction_desc"
        android:layout_width="171dp"
        android:layout_height="22dp"
        android:layout_marginTop="7dp"
        android:text="내 테이프를 확인해보세요"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/introduction_title" />

    <ImageView
        android:id="@+id/main_iv"
        android:layout_width="284dp"
        android:layout_height="215dp"
        android:src="@drawable/union"
        app:layout_constraintTop_toBottomOf="@id/introduction_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="46dp"/>
    <ImageView
        android:id="@+id/single_tape_type_iv1"
        android:layout_width="77dp"
        android:layout_height="92dp"
        android:src="@drawable/note"
        app:layout_constraintStart_toStartOf="@id/main_iv"
        app:layout_constraintEnd_toEndOf="@id/main_iv"
        app:layout_constraintTop_toTopOf="@id/main_iv"
        app:layout_constraintBottom_toBottomOf="@id/main_iv"
        android:layout_marginRight="42dp"/>
    <ImageView
        android:id="@+id/single_tape_type_iv2"
        android:layout_width="43dp"
        android:layout_height="51dp"
        android:src="@drawable/note2"
        app:layout_constraintStart_toStartOf="@id/main_iv"
        app:layout_constraintEnd_toEndOf="@id/main_iv"
        app:layout_constraintTop_toTopOf="@id/main_iv"
        app:layout_constraintBottom_toBottomOf="@id/main_iv"
        android:layout_marginLeft="82dp"
        android:layout_marginBottom="76dp"/>
    <ImageView
        android:id="@+id/album_tape_type__iv"
        android:layout_width="175dp"
        android:layout_height="115dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_tape"
        app:layout_constraintStart_toStartOf="@id/main_iv"
        app:layout_constraintEnd_toEndOf="@id/main_iv"
        app:layout_constraintTop_toTopOf="@id/main_iv"
        app:layout_constraintBottom_toBottomOf="@id/main_iv"/>

    <ImageView
        android:id="@+id/btn_to_home"
        android:layout_width="328dp"
        android:layout_height="52dp"
        android:src="@drawable/btn_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_iv"
        android:layout_marginTop="28dp"/>
    <TextView
        android:layout_width="112dp"
        android:layout_height="26dp"
        android:text="홈으로 돌아가기"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/btn_to_home"
        app:layout_constraintEnd_toEndOf="@id/btn_to_home"
        app:layout_constraintTop_toTopOf="@id/btn_to_home"
        app:layout_constraintBottom_toBottomOf="@id/btn_to_home"
        android:textAlignment="center"/>



    
        

</androidx.constraintlayout.widget.ConstraintLayout>